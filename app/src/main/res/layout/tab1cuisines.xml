<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jerrydengu.eazyeats.MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:background="#ffff"
        android:id="@+id/cuisineview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cuisineName"
            android:textColor="#ffa500"
            android:layout_marginTop="25dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#ffa500"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="90dp"
            android:id="@+id/cuisineImage"
            />
        <Button
            android:text="View Outlets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cuisineButton"
            android:textAlignment="center"
            android:layout_marginTop="200dp"
            android:background="@drawable/button_styles"
            android:layout_marginLeft="280dp"
            android:textColor="#ffa500"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>
