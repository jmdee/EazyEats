<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jerrydengu.eazyeats.RegisterActivity"
    android:animationCache="false">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Firstname"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="148dp"
        android:layout_marginEnd="148dp"
        android:id="@+id/Namereg"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Lastname"
        android:ems="10"
        android:id="@+id/Surnamereg"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/Cityreg"
        android:layout_alignStart="@+id/Cityreg"
        android:textColor="?attr/actionMenuTextColor"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:id="@+id/Emailreg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Email"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="City"
        android:ems="10"
        android:id="@+id/Cityreg"
        android:layout_alignBaseline="@+id/phonereg"
        android:layout_alignBottom="@+id/phonereg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/streetReg"
        android:layout_toEndOf="@+id/streetReg"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Street Address"
        android:ems="10"
        android:id="@+id/streetReg"
        android:layout_below="@+id/phonereg"
        android:layout_alignRight="@+id/Namereg"
        android:layout_alignEnd="@+id/Namereg"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phonereg"
        android:text="Phone"
        android:hint="Phone"
        android:layout_below="@+id/Emailreg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/Cityreg"
        android:layout_toStartOf="@+id/Cityreg"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/Agereg"
        android:textStyle="normal|bold|italic"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/streetReg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="NEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Buttonreg"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/Agereg"
        android:layout_toEndOf="@+id/streetReg"
        android:elevation="0dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:visibility="visible"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        android:background="@drawable/button_styles"
        android:padding="15dp"

            />

    <TextView
        android:text="Already have an account? "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="346dp"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Agereg"
        android:textStyle="normal|bold"
        android:layout_toLeftOf="@+id/Buttonreg"
        android:layout_toStartOf="@+id/Buttonreg"
        android:textColor="@android:color/holo_orange_light" />

    <TextView
        android:text="SIGN IN"
        android:id="@+id/Signinreg"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" />

</RelativeLayout>
