<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jerrydengu.eazyeats.RegisterActivity"
    android:animationCache="false">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:id="@+id/Emailreg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Email Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Cityreg"
        android:layout_alignBaseline="@+id/phonereg"
        android:layout_alignBottom="@+id/phonereg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/phonereg"
        android:hint="City"
        android:layout_toRightOf="@+id/phonereg" />

    <TextView
        android:text="SIGN IN"
        android:id="@+id/Signinreg"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/Qnaccount"
        android:layout_alignBottom="@+id/Qnaccount"
        android:layout_toRightOf="@+id/Qnaccount"
        android:layout_toEndOf="@+id/Qnaccount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Passwordreg"
        android:hint="Password"
        android:layout_below="@+id/streetReg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Namereg"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:hint="Firstname"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/Signinreg"
        android:layout_toLeftOf="@+id/Signinreg" />

    <Button
        android:text="NEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Buttonreg"
        android:elevation="0dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:visibility="visible"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        android:background="@drawable/button_styles"
        android:padding="15dp"

        android:layout_below="@+id/Passwordreg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:text="Already have an account? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Qnaccount"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_orange_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/streetReg"
        android:hint="Street Address"
        android:layout_below="@+id/Cityreg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phonereg"
        android:hint="Phone Number"
        android:layout_below="@+id/Emailreg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Surnamereg"
        android:textColor="?attr/actionMenuTextColor"
        android:hint="Lastname"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/phonereg"
        android:layout_toRightOf="@+id/phonereg" />

</RelativeLayout>
